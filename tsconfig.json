{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "strict": true,
    "noEmit": true,
  },
  "include": ["**/*.ts"],
  "exclude": [
    "node_modules",
  ]
}